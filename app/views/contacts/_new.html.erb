<aside class="contact" id="contact">
  <div class="container">

    <div class="text-center">
     <h2 class="interet">Interessé par mon profil ? Contactez-moi !</h2>

   </div>
   </div>
  <div class="container contact-form">
    <div class="contact-image">
      <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact"/>
    </div>
        <%= flash[:success] %>
        <%= form_for @contact do |f| %>
        <div class="row">
          <div class="col-md-12">
          <div class="text-center" style="margin-top:60px;">
           <h3>Envoyez un message</h3>
          </div>
          </div>
         <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :name, class:"form-control", placeholder:"Votre nom: Dimitri Payet",required: true %>
          </div>
          <div class="form-group">
            <%= f.text_field :email,  class:"form-control", placeholder:"Votre email: dimitri@gmail.com" ,required: true %>
          </div>
          <div class="form-group ">
            <%= f.text_field :phone,  class:"form-control", placeholder:"Votre téléphone: 0606060606" ,required: true %>
          </div>

          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.text_area :message, rows: 5, class: "form-control", style: "width: 100%; height: 150px;", placeholder:"Ecrivez votre message"%>
            </div>
            <div class="form-group">
            <%= f.submit 'Envoyer', class:'btnContact' %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
      <div class="container">
        <div class="row">
				<div class="col-xs-12 col-sm-12 col-md-12 mt-2 mt-sm-5" style="margin-bottom:60px;">
					<ul class="list-unstyled list-inline social text-center">
						<li class="list-inline-item"><a href="https://twitter.com/jrkinouani"><img src="https://img.icons8.com/color/48/000000/twitter-squared.png" target="_blank"></a></li>
						<li class="list-inline-item"><a href="https://www.instagram.com/jrkinouani/"><img src="https://img.icons8.com/color/48/000000/instagram-new.png" target="_blank"></a></li>
					</ul>
				</div>
				</hr>
			</div>
      </div>
        <p class="text-center" style="color:#fff;">Copyright @2019 | Codé by <a href="https://twitter.com/jrkinouani"  id="by" target="_blank"> <i class="fa fa-chevron-left" aria-hidden="true" id="icon_footer"> </i> Ruby on rails <i class="fa fa-chevron-right" aria-hidden="true" id="icon_footer"></i> avec <i class="fa fa-heart" aria-hidden="true" id="icon_footer"></i> par jrkinouani - La Réunion</a>
        </p>

</aside>
