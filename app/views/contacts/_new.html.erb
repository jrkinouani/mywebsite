<aside class="contact" id="contact">
  <div class="container contact-form">
    <div class="contact-image">
      <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact"/>
    </div>
        <%= flash[:success] %>
        <%= form_for @contact do |f| %>
        <div class="row">
          <div class="col-md-12">
          <div class="text-center" style="margin-top:60px;">
           <h3>Envoyez un message</h3>
          </div>
          </div>
         <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :name, class:"form-control", placeholder:"Votre nom: Dimitri Payet",required: true %>
          </div>
          <div class="form-group">
            <%= f.text_field :email,  class:"form-control", placeholder:"Votre email: dimitri@gmail.com" ,required: true %>
          </div>
          <div class="form-group ">
            <%= f.text_field :phone,  class:"form-control", placeholder:"Votre téléphone: 0606060606" ,required: true %>
          </div>

          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.text_area :message, rows: 5, class: "form-control", style: "width: 100%; height: 150px;", placeholder:"Ecrivez votre message"%>
            </div>
            <div class="form-group">
            <%= f.submit 'Envoyer', class:'btnContact' %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
      <div class="container">
        <p class="text-center">Copyright @2018 | Coder by <a href="https://twitter.com/jrkinouani"  class="by" target="_blank"> <i class="fa fa-chevron-left" aria-hidden="true" id="icon_footer"> </i> Ruby on rails <i class="fa fa-chevron-right" aria-hidden="true" id="icon_footer"></i> avec <i class="fa fa-heart" aria-hidden="true" id="icon_footer"></i> par jrkinouani - l'île de la reunion</a>
        </p>
      </div>
</aside>
